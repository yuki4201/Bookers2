<% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this book from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= form_with model:@user, local:true do |f| %>
          
        <div class="form-group">
          <label for="inputName">Name</label>
          <br>
          <%= f.text_field :name, autofocus: true, id:"user_name" %>
          </br>
        </div>

        <div class="form-group">
          <label for="inputImage">Image</label>
          <br>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
          </br>
        </div>
        
        <div class="form-group">
          <label for="inputName">Introduction</label>
          <br>
          <%= f.text_area :introduction, autofocus: true, id:"inputName" %>
          </br>
        </div>
        
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</main>